<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/security"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_toolbar_security"
            android:src="@drawable/ic_lock" />

        <LinearLayout
            android:id="@+id/editLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/toolbar_edit_background"
            tools:ignore="NestedWeights">

            <ImageView
                android:id="@+id/favicon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:contentDescription="@string/content_description_toolbar_favicon"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/urlReadable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:hint="@string/toolbar_url_hint"
                android:textColorHint="#4E342E"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/url"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/toolbar_url_hint"
                android:importantForAutofill="no"
                android:imeOptions="actionGo"
                android:inputType="textUri|text"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="10dp"
                android:textColorHint="#4E342E"
                android:textSize="12sp"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_toolbar_cancel"
            android:src="@drawable/ic_cancel" />

        <ImageButton
            android:id="@+id/tabs"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_toolbar_tabs"
            android:src="@drawable/ic_tab" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_toolbar_menu"
            android:src="@drawable/ic_more_vert" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:max="100" android:progress="0"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
</FrameLayout>
