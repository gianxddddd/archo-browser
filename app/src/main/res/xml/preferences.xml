<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/preferences_category_web">

        <ListPreference
            app:key="renderer"
            app:title="@string/preferences_item_renderer"
            app:entries="@array/preferences_renderers"
            app:entryValues="@array/preferences_renderer_items"
            app:defaultValue="mozilla"
            app:useSimpleSummaryProvider="true" />
        <CheckBoxPreference
            app:key="swRender"
            app:title="@string/preferences_item_sw_render"
            app:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/preferences_category_general">

        <Preference
            app:key="deleteData"
            app:title="@string/preferences_item_delete_data"
            app:summary="@string/preferences_item_delete_data_summary" />
        <Preference
            app:key="manageSitePermissions"
            app:title="@string/preferences_item_manage_site_permissions" />
        <Preference
            app:key="downloadOptions"
            app:title="@string/preferences_item_download_opts"
            app:fragment="ga.gianxd.browser.fragment.PreferencesDownloadOptionsFragment"/>
        <Preference
            app:key="histBooks"
            app:title="@string/preferences_item_histbook" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/preferences_category_about">

        <Preference
            app:title="@string/preferences_item_app"
            app:summary="@string/preferences_item_app_summary"/>
        <Preference
            app:title="@string/preferences_item_copyright"
            app:summary="@string/preferences_item_copyright_summary" />
    </PreferenceCategory>
</PreferenceScreen>